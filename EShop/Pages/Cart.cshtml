@page
@model EShop.Pages.Cart

<h4>Кошик</h4>
<div class="row">
    <table class="table">
        <thead>
        <tr>
            <th>

            </th>
            <th>
                Назва
            </th>
            <th>
                Кількість
            </th>
            <th>Ціна</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @if (Model.ShoppingCart.CartItems != null && Model.ShoppingCart.CartItems.Count > 0)
        {
            @foreach (var item in Model.ShoppingCart.CartItems)
            {
                <tr>
                    <td class="align-middle">
                        @if (item.Item.Images != null && item.Item.Images.Count > 0)
                        {
                            <img class="img-thumbnail rounded management-list-image" src="data:image/jpg;base64,@Convert.ToBase64String(item.Item.Images?.FirstOrDefault()?.ImageData ?? Array.Empty<byte>())" alt="@item.Item.DisplayName"/>
                        }
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Item.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item.Price) * @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        <a asp-page="./Delete" asp-route-id="@item.Id">Видалити</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="align-middle text-center">
                    Кошик порожній
                </td>
            </tr>
        }
        <tr>
            <td>

            </td>
            <td>

            </td>
            <td>

            </td>
            <td>
                Загальна вартість елементів в кошику
            </td>

            <td>
                @Model.ShoppingCart.TotalPrice
            </td>
        </tr>
        </tbody>
    </table>
    <div class="row justify-content-around w-100">
        <div class="col-md-3">
            <a asp-page="/Index" class="btn btn-primary"><i class="fas fa-arrow-left"></i> До каталогу</a>
        </div>
        <div class="col-md-3">
            <form method="post">
                <button type="submit" class="btn btn-primary">Оформити замолення</button>
            </form>
        </div>
    </div>
</div>