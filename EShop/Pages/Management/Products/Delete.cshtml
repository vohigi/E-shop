@page "{id:Guid}"
@model EShop.Pages.Management.Products.Delete

<h4>Видалити товар</h4>
<hr />
<p class="text-danger">@Model.ErrorMessage</p>

<div>
    <dl class="dl-horizontal">
        <dt>
            Назва
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.DisplayName)
        </dd>
        <dt>
            Опис
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt>
            Виробник
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Manufacturer)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <input type="submit" value="Видалити" class="btn btn-primary"/>
        <a asp-page="./Index">Назад до списку</a>
    </form>
</div>